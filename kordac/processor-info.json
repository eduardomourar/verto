{
    "panel": {
        "pattern_start": "^\\{panel ?(?P<args>[^\\}]*)(?<! end)\\}",
        "pattern_end": "\\{panel end\\}",
        "required_parameters": ["type", "title"],
        "optional_parameter_dependencies": {
            "subtitle": [],
            "expanded": []
        }
    },
    "glossary-link": {
        "pattern": "\\{glossary-link ?(?P<args>[^\\}]*)}?(?P<text>.*?){glossary-link end\\}",
        "required_parameters": ["term"],
        "optional_parameter_dependencies": {
            "reference-text" :[]
        }
    },
    "comment": {
        "pattern" : "\\{comment [^\\}]+\\}"
    },
    "conditional": {
        "pattern": "^\\{conditional (?P<args>[^\\}]*(?<! end))\\}$",
        "pattern_end": "^\\{conditional end\\}$",
        "required_parameters": [],
        "optional_parameter_dependencies": {
          "condition": [],
          "if": ["condition"],
          "elif": ["condition"],
          "else": []
        }
    },
    "video": {
        "pattern": "\\{video (?P<args>[^\\}]*)\\}",
        "required_parameters": ["url"],
        "optional_parameter_dependencies": {}
    },
    "image": {
        "pattern": "(\\{image (?P<args>[^\\}]*)\\})",
        "required_parameters": ["file-path"],
        "optional_parameter_dependencies": {
            "alt": [],
            "caption": [],
            "caption-link": ["caption"],
            "source": [],
            "alignment": [],
            "hover-text": []
        }
    },
    "interactive": {
        "pattern": "^\\{interactive ?(?P<args>[^\\}]*)\\}$"
    },
    "heading": {
        "pattern": "(^|\\n)(?P<level>#{1,6})(?!#+)\\s?(?P<header>.*?)\\s?#*(\\n|$)",
        "required_parameters": [],
        "optional_parameter_dependencies": {}
    },
    "title": {
        "pattern": "^#+ ?(.*)"
    },
    "button-link": {
        "pattern": "\\{button-link (?P<args>[^\\}]*)\\}",
        "required_parameters": ["link", "text"],
        "optional_parameter_dependencies": {
            "file": []
        }
    },
    "boxed-text": {
        "pattern_start": "\\{boxed-text ?(?P<args>[^\\}]*)(?<! end)\\}",
        "pattern_end": "\\{boxed-text end\\}",
        "required_parameters": [],
        "optional_parameter_dependencies": {
            "indented": []
        }
    },
    "relative-link": {
        "pattern": "\\[(?P<link_text>[^\\]]+)\\]\\((?!(https?|ftps?|mailto|news):)(?P<link_url>[^\\)]+)\\)",
        "required_parameters": ["link_path"],
        "optional_parameter_dependencies": []
    }
}
